{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "strict": true,
        "jsx": "preserve",
        "sourceMap": false,
        "lib": ["esnext", "dom"],
        "typeRoots": ["node_modules/@types", "node_modules/jest/types"],
        "types": ["jest", "node", "vite/client"],
        "paths": {
            "@/*": ["src/*"],
        },
    },
    "include": [
        "packages/renderer/**/*.ts",
        "packages/renderer/**/*.vue",
        "packages/renderer/**/*.js",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.vue",
    ],
    "exclude": ["node_modules", "dist", "public", "tests", "scripts"],
}
