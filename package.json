{
    "name": "package-skeleton",
    "version": "1.0.0",
    "description": "{{package.description}}",
    "author": "{{package.author.name}} <{{package.author.email}}>",
    "license": "MIT",
    "main": "packages/main/dist/index.cjs",
    "scripts": {
        "dev": "vite --host",
        "build": "vite build",
        "build:el": "node scripts/build.js",
        "precompile": "MODE=production npm run build",
        "compile": "electron-builder build --config electron-builder.config.js --dir --config.asar=false",
        "start:el": "npm run build && npm run build:el && npm run compile && ./dist/linux-unpacked/project-forge",
        "serve": "vite preview",
        "test": "jest tests --verbose",
        "test:coverage": "jest tests --coverage",
        "fmt": "./node_modules/.bin/prettier --config prettier.config.js --write 'src/**/*.{js,ts,json,yml,yaml}' 'tests/**/*.{js,ts,json,yml,yaml}' './*.{js,yml,yaml,json}'",
        "lint": "./node_modules/.bin/eslint --ext ts,js src/",
        "lint:fix": "./node_modules/.bin/eslint --ext ts,js --fix src/",
        "lint:staged": "./node_modules/.bin/lint-staged",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{js,ts,vue}": [
            "./node_modules/.bin/prettier --config prettier.config.js --write",
            "./node_modules/.bin/eslint --ext ts,js --fix"
        ],
        "*.{json,css,scss,gql}": [
            "./node_modules/.bin/prettier --config prettier.config.js --write"
        ],
        "*.{yaml,yml}": [
            "./node_modules/.bin/prettier --config prettier.config.js --tab-width 2 --write"
        ]
    },
    "dependencies": {
        "electron-updater": "^4.6.1",
        "electron-webpack": "^2.8.2",
        "vue": "^3.2",
        "vue-router": "^4.0",
        "vuex": "^4.0"
    },
    "devDependencies": {
        "@headlessui/vue": "^1.4.2",
        "@heroicons/vue": "^1.0.5",
        "@tailwindcss/aspect-ratio": "^0.4.0",
        "@tailwindcss/forms": "^0.4.0",
        "@tailwindcss/line-clamp": "^0.3.0",
        "@tailwindcss/typography": "^0.5.0",
        "@types/electron-devtools-installer": "2.2.1",
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.8",
        "@types/tailwindcss": "^3.0.2",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "@vitejs/plugin-vue": "^2.0.1",
        "@vue/compiler-sfc": "^3.2",
        "autoprefixer": "^10.4.2",
        "electron": "17.0.0",
        "electron-builder": "22.14.5",
        "electron-devtools-installer": "3.2.0",
        "eslint": "^8.6.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-vue": "^8.2.0",
        "husky": "^7.0.4",
        "jest": "^27.4.7",
        "lint-staged": "^12.1.7",
        "prettier": "^2.5.1",
        "tailwindcss": "^3.0.13",
        "ts-jest": "^27.1.2",
        "typescript": "^4.5",
        "vite": "^2.7.10",
        "vue-eslint-parser": "^8.0.1"
    }
}
